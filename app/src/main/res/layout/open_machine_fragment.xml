<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">
<TextView
    android:layout_marginTop="10dp"
    android:id="@+id/open_machine_tv"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="32sp"
    android:textColor="@color/white"
    android:text="开门机设置"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    
    <View
        android:layout_marginLeft="16dp"
        android:background="@drawable/unlock"
        app:layout_constraintLeft_toRightOf="@+id/open_machine_tv"
        app:layout_constraintBottom_toBottomOf="@+id/open_machine_tv"
        app:layout_constraintTop_toTopOf="@+id/open_machine_tv"
        android:layout_width="32dp"
        android:layout_height="30dp"/>
    
<ScrollView
    android:layout_marginTop="106dp"
    app:layout_constraintTop_toBottomOf="@+id/open_machine_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="开门角度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/open_degree_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_guide_select"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/screen_off_time">

            <RadioButton
                android:id="@+id/open_degree_90"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="90°"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/open_degree_100"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="100°"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/open_degree_110"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="110°"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RadioGroup>

        <TextView
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="开门速度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/open_speed_group"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_guide_select"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/screen_off_time">

            <RadioButton
                android:id="@+id/open_speed_low"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="低"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/open_speed_mid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="中"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/open_speed_high"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="高"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RadioGroup>


        <TextView
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="关门速度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/close_speed_group"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_guide_select"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/screen_off_time">

            <RadioButton
                android:id="@+id/close_speed_low"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="低"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/close_speed_mid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="中"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/close_speed_high"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:text="高"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RadioGroup>


        <TextView
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="关门等待时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/close_time_cl"
            android:background="@drawable/shape_radius_8_2f3241"
            android:layout_marginTop="16dp"
            android:layout_width="476dp"
            android:layout_height="98dp">

            <TextView
                android:text="5秒"
                android:textColor="@color/white"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@drawable/jiantou"
                android:layout_marginRight="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="开门角度修复值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/open_degree_repair_cl"
            android:background="@drawable/shape_radius_8_2f3241"
            android:layout_marginTop="16dp"
            android:layout_width="476dp"
            android:layout_marginBottom="100dp"
            android:layout_height="98dp">

            <TextView
                android:text="0"
                android:textColor="@color/white"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@drawable/jiantou"
                android:layout_marginRight="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>