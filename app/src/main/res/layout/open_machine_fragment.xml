<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">


    <View
        android:id="@+id/back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <ImageView
        android:layout_width="33dp"
        android:layout_height="20dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/setting_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/setting_title" />

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="开门机设置"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





    <TextView
    android:layout_marginTop="70dp"
    android:id="@+id/open_machine_tv"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="16sp"
    android:textColor="@color/white"
    android:text="开门机设置"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    
    <View
        android:layout_marginLeft="16dp"
        android:background="@drawable/unlock"
        app:layout_constraintLeft_toRightOf="@+id/open_machine_tv"
        app:layout_constraintBottom_toBottomOf="@+id/open_machine_tv"
        app:layout_constraintTop_toTopOf="@+id/open_machine_tv"
        android:layout_width="20dp"
        android:layout_height="18dp"/>
    
<ScrollView
    android:scrollbars="none"
    android:layout_marginTop="106dp"
    app:layout_constraintTop_toBottomOf="@+id/open_machine_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="开门角度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/open_degree_radio_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_guide_select"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/screen_off_time">

            <RadioButton
                android:id="@+id/open_degree_90"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="90°"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/open_degree_100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="100°"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/open_degree_110"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="110°"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RadioGroup>

        <TextView
            android:layout_marginTop="22dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="开门速度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/open_speed_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_guide_select"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/screen_off_time">

            <RadioButton
                android:id="@+id/open_speed_low"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="低"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/open_speed_mid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="中"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/open_speed_high"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="高"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RadioGroup>


        <TextView
            android:layout_marginTop="22dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="关门速度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/close_speed_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_guide_select"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/screen_off_time">

            <RadioButton
                android:id="@+id/close_speed_low"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="低"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/close_speed_mid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="中"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/close_speed_high"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/radio_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="高"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RadioGroup>


        <TextView
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="关门等待时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/close_time_cl"
            android:background="@drawable/shape_radius_8_2f3241"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/close_time_tv"
                android:text="5秒"
                android:textColor="@color/white"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@drawable/jiantou"
                android:layout_marginRight="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_marginTop="22dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="开门角度修复值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/open_degree_repair_cl"
            android:background="@drawable/shape_radius_8_2f3241"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/open_degree_repair_tv"
                android:text="0°"
                android:textColor="@color/white"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@drawable/jiantou"
                android:layout_marginRight="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>