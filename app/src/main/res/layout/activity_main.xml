<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".Activity.MainActivity">
<LinearLayout
    android:background="@color/c_1a2531"
    android:id="@+id/ll"
    android:orientation="vertical"
   app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="430dp"
    android:layout_height="match_parent">

    <RelativeLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl"
        >


        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fun_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wl.wlflatproject.MView.SimpleUVCCameraTextureView
                android:scaleY="-1.0"
                android:scaleX="-1.0"
                android:id="@+id/video_play_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />




        </RelativeLayout>
    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg"
        android:id="@+id/cl"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="494dp">

        <TextView
            android:text=""
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:textColor="@color/white"
            android:textSize="96sp" />

        <TextView
            app:layout_constraintRight_toRightOf="@+id/time"
            app:layout_constraintLeft_toLeftOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/time"
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-07-03"
            android:textColor="@color/white"
            android:textSize="32sp" />



        <TextView
            app:layout_constraintRight_toRightOf="@+id/time"
            app:layout_constraintLeft_toLeftOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/date_tv"
            android:id="@+id/calendar_cn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="农历-四月-初三"
            android:textColor="@color/white"
            android:textSize="32sp" />
        <ImageView
            android:background="@drawable/logo"
            android:id="@+id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="120dp"
            android:layout_height="48dp"/>


        <ImageView
            android:id="@+id/wifi_state"
            android:layout_marginRight="100dp"
            android:background="@drawable/wifi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            app:layout_constraintTop_toTopOf="@+id/logo"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <ImageView
            android:id="@+id/setting"
            android:layout_marginRight="30dp"
            android:background="@drawable/setting"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            app:layout_constraintTop_toTopOf="@+id/logo"
            android:layout_width="42dp"
            android:layout_height="42dp"/>



        <LinearLayout
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/door_select_ll"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginRight="8dp"
                android:id="@+id/lock_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/open"
                android:gravity="center"
                android:orientation="vertical">


<!--                <ImageView-->
<!--                    android:layout_width="18dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:background="@drawable/lock_icon" />-->

<!--                <TextView-->
<!--                    android:layout_marginTop="6dp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="开锁"-->
<!--                    android:textColor="#ffffff"-->
<!--                    android:textSize="12sp" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/changKai"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/changkai"
                android:gravity="center"
                android:orientation="vertical">

<!--                <ImageView-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="15dp"-->
<!--                    android:background="@drawable/open_icon" />-->

<!--                <TextView-->
<!--                    android:layout_marginTop="6dp"-->
<!--                    android:id="@+id/changkai"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="常开"-->
<!--                    android:textColor="#ffffff"-->
<!--                    android:textSize="12sp" />-->

            </LinearLayout>



            <LinearLayout
                android:layout_marginLeft="8dp"
                android:id="@+id/video_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/video"
                android:gravity="center"
                android:orientation="vertical">

<!--                <ImageView-->
<!--                    android:layout_width="14dp"-->
<!--                    android:layout_height="23dp"-->
<!--                    android:background="@drawable/video_icon" />-->

<!--                <TextView-->
<!--                    android:layout_marginTop="6dp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="视频"-->
<!--                    android:textColor="#ffffff"-->
<!--                    android:textSize="12sp"-->
<!--                    android:textStyle="bold" />-->

            </LinearLayout>





        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cl"
        app:layout_constraintRight_toLeftOf="@+id/ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <include
            android:layout_marginRight="8dp"
            layout="@layout/ll_main_weather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <include
            layout="@layout/message_board"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </include>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginLeft="8dp"
            android:background="@drawable/device_bg_1b1b1b_r5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>