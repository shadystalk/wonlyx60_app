<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    tools:context=".Activity.MainActivity">
<LinearLayout
    android:background="@color/c_1a2531"
    android:id="@+id/ll"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="@dimen/dp_240"
    android:layout_height="match_parent">

    <RelativeLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl"
        android:layout_marginBottom="@dimen/dp_8">


        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg" />
        <ImageView
            android:layout_marginTop="@dimen/dp_75"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_48"
            android:background="@mipmap/logo" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fun_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wl.wlflatproject.MView.SimpleUVCCameraTextureView
                android:scaleY="-1.0"
                android:scaleX="-1.0"
                android:id="@+id/video_play_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/setting"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@drawable/shape_1fc19a"
            android:gravity="center"
            android:text="设置"
            android:textColor="#1fc19a"
            android:textSize="14dp"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/code_bt"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@drawable/twocode" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />




        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_70"
        android:textColor="@color/white"
        android:textSize="60dp" />
    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_25"
        app:layout_constraintRight_toRightOf="@+id/ll"
        app:layout_constraintLeft_toLeftOf="@+id/ll"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/door_select_ll"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/lock_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="2"
            android:background="@drawable/shape_radius_8_2e97ff"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_14"
                android:background="@drawable/lock_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="开锁"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/video_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="2"
            android:background="@drawable/shape_radius_8_4dd094"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:background="@drawable/video_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="视频"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="2"
            android:background="@drawable/shape_radius_8_4dd094"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:background="@drawable/open_icon" />

            <TextView
                android:id="@+id/changkai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="常开"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            layout="@layout/ll_main_weather"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <include
            android:layout_marginTop="@dimen/dp_7"
            layout="@layout/ll_main_calendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>