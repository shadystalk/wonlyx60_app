<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bind_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        android:text="设备绑定"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:text="请使用爱感全屋智能APP扫描下方二维码绑定设备"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <ImageView
        android:id="@+id/code_view"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="338dp"
        android:layout_height="338dp"/>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bind_ll"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_radius_3_232324"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/bind_tv"
        android:orientation="vertical"
        android:layout_width="402dp"
        android:layout_height="108dp">

        <TextView
            android:textColor="#90ffffff"
            android:textSize="20sp"
            android:text="绑定账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bind_num"
            android:layout_marginTop="20dp"
            android:textColor="#70ffffff"
            android:textSize="20sp"
            android:text="--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv1"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bind_ll"
        android:textColor="#50ffffff"
        android:textSize="20sp"
        android:text="如需解绑设备，请前往爱感全屋智能App进行操作"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>