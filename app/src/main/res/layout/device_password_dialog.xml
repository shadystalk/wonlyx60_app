<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="314dp"
    android:background="@drawable/device_313132_d14"
    android:layout_height="419dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="314dp"
        android:layout_height="419dp">


        <LinearLayout
            android:background="@drawable/rect_323132_000000_d5"
            android:orientation="horizontal"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:background="@drawable/password_lock"
                android:layout_width="27dp"
                android:layout_height="27dp" />

            <EditText
                android:layout_marginLeft="7dp"
                android:background="@null"
                android:id="@+id/password_dialog_password"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textSize="17sp"
                android:hint="请输入系统密码"
                android:textColorHint="#50ffffff"
                android:textColor="@color/white"
                android:layout_width="160dp"
                android:layout_height="47dp" />

            <View
                android:id="@+id/clean"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/password_clean"
                android:layout_width="21dp"
                android:layout_height="21dp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="20px"
                android:background="@drawable/device_password"
                app:layout_constraintBottom_toTopOf="@id/password_dialog_four"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/password_dialog_one"
                app:layout_constraintRight_toLeftOf="@id/password_dialog_two"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />

            <TextView
                android:layout_marginRight="20px"
                android:layout_marginLeft="20px"
                android:background="@drawable/device_password"
                app:layout_constraintRight_toLeftOf="@id/password_dialog_three"
                app:layout_constraintLeft_toRightOf="@id/password_dialog_one"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/password_dialog_two"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />

            <TextView
                android:layout_marginLeft="20px"
                android:background="@drawable/device_password"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/password_dialog_two"
                android:id="@+id/password_dialog_three"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />

            <TextView
                android:layout_marginTop="14dp"
                android:background="@drawable/device_password"
                app:layout_constraintTop_toBottomOf="@id/password_dialog_one"
                app:layout_constraintLeft_toLeftOf="@id/password_dialog_one"
                app:layout_constraintBottom_toTopOf="@id/password_dialog_seven"
                android:id="@+id/password_dialog_four"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />

            <TextView
                android:background="@drawable/device_password"
                app:layout_constraintLeft_toLeftOf="@id/password_dialog_two"
                app:layout_constraintTop_toTopOf="@id/password_dialog_four"
                android:id="@+id/password_dialog_five"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <TextView
                android:background="@drawable/device_password"
                app:layout_constraintLeft_toLeftOf="@+id/password_dialog_three"
                app:layout_constraintLeft_toRightOf="@id/password_dialog_five"
                app:layout_constraintTop_toTopOf="@id/password_dialog_four"
                android:id="@+id/password_dialog_six"
                android:text="6"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />

            <TextView
                android:layout_marginTop="14dp"
                android:layout_marginRight="25px"
                android:background="@drawable/device_password"
                app:layout_constraintBottom_toTopOf="@id/password_dialog_cancel"
                app:layout_constraintTop_toBottomOf="@id/password_dialog_four"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/password_dialog_seven"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />

            <TextView
                android:background="@drawable/device_password"
                app:layout_constraintTop_toTopOf="@id/password_dialog_seven"
                app:layout_constraintLeft_toLeftOf="@id/password_dialog_two"
                android:id="@+id/password_dialog_eight"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />

            <TextView
                android:background="@drawable/device_password"
                app:layout_constraintTop_toTopOf="@+id/password_dialog_seven"
                app:layout_constraintLeft_toLeftOf="@+id/password_dialog_three"
                app:layout_constraintLeft_toRightOf="@id/password_dialog_eight"
                android:id="@+id/password_dialog_nine"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />


            <TextView
                android:layout_marginTop="14dp"
                android:background="@drawable/device_password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_dialog_seven"
                app:layout_constraintLeft_toLeftOf="@+id/password_dialog_seven"
                android:id="@+id/password_dialog_cancel"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />


            <TextView
                android:background="@drawable/device_password"
                app:layout_constraintTop_toTopOf="@id/password_dialog_cancel"
                app:layout_constraintRight_toRightOf="@+id/password_dialog_eight"
                app:layout_constraintLeft_toLeftOf="@+id/password_dialog_eight"
                android:id="@+id/password_dialog_zero"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />


            <TextView
                app:layout_constraintTop_toTopOf="@id/password_dialog_cancel"
                android:background="@drawable/device_password"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/password_dialog_nine"
                android:id="@+id/password_dialog_sure"
                android:text="确定"
                android:textColor="#4dd094"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="64dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="64dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</RelativeLayout>