<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底部椭圆 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
            <size
                android:width="20dp"
                android:height="80dp" />
        </shape>
    </item>
    <!-- 顶部椭圆 -->
    <item
        android:bottom="16dp"
        android:right="16dp"
        android:top="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>

